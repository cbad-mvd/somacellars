{# -- Generic layout template for all HTML pages   -- #}
{# --   includes <head> section including styles,  -- #}
{# --   but without any specific site html markup  -- #}
{#
 ┌─────────────────────────────────────────────────────────────────────────────┐
 │ ┌─────────────────────────────────────────────────────────────────────────┐ │
 │ │                                 header                                  │ │
 │ └─────────────────────────────────────────────────────────────────────────┘ │
 │ ┌─────────────────────────────────────────────────────────────────────────┐ │
 │ │                                                                         │ │
 │ │                                                                         │ │
 │ │                                                                         │ │
 │ │                                 content                                 │ │
 │ └─────────────────────────────────────────────────────────────────────────┘ │
 │ ┌─────────────────────────────────────────────────────────────────────────┐ │
 │ │                                                                         │ │
 │ │                                                                         │ │
 │ │                                                                         │ │
 │ │                               subContent                                │ │
 │ └─────────────────────────────────────────────────────────────────────────┘ │
 │ ┌─────────────────────────────────────────────────────────────────────────┐ │
 │ │                                 footer                                  │ │
 │ └─────────────────────────────────────────────────────────────────────────┘ │
 │                                                                             │
 │                                  bodyHtml                                   │
 └─────────────────────────────────────────────────────────────────────────────┘
#}
{% extends "_boilerplate/_layouts/base-html-layout.twig" %}
{% set staticAssetsVersion = craft.app.config.general.environmentVariables.staticAssetsVersion %}   {# for cache busting #}

{# -- Any <meta> tags that should be included in the <head> #}
    {% block headMeta %}
    <!-- Document metadata -->
    <meta charset="utf-8"/>
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=no">
    <meta http-equiv="cleartype" content="on">
    <meta name="MobileOptimized" content="320">
    <meta name="HandheldFriendly" content="True">
    <meta name="apple-mobile-web-app-capable" content="yes">

    {% block titleTag %}
    {% endblock titleTag %}
{% endblock headMeta %}

{# -- Any <link> tags that should be included in the <head> #}
{% block headLinks %}
    <!-- Fonts, CSS & favicon -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Crimson+Text&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=EB+Garamond&display=swap" rel="stylesheet">
        
    <link href="https://fonts.googleapis.com/css?family=Raleway:400,300,600" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Merriweather:300i,400,400i">

    <!-- Stylesheets -->
    <link href="/assets/css/styles.css?v={{staticAssetsVersion}}" type="text/css" rel="stylesheet">

    <!-- FavIcon -->
    <link rel="icon" href="/favicon.svg" type="image/svg+xml">
{% endblock headLinks %}

{# -- Any CSS that should be included before </head> -- #}
{% block headCss %}
{% include "_inline-css/site-fonts.css" %}
{% endblock headCss %}

{# -- Page body -- #}
{% block bodyHtml %}
    <div id="page-container" class="overflow-hidden leading-tight">
        <confetti></confetti>
        <div id="content-container" class="bg-repeat header-background">

            {% block header %}
            {% endblock %}

            <main {% block mainClass %}{% endblock %}>
                <div class="container mx-auto pb-8">
                    {# -- Primary content block -- #}
                    {% block content %}
                    {% endblock %}
                </div>
            </main>
        </div>

        {# -- Content that appears below the primary content block -- #}
        {% block subcontent %}
        {% endblock %}

        {% block footer %}
        {% endblock %}
    </div>
{% endblock bodyHtml %}
