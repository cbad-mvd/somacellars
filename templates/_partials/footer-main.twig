{% set myEntryQuery = craft.entries().section('globalFooter').limit(1) %}
{% set thisEntry = myEntryQuery.one() %}

<footer class="FooterSections">
    <div class="footerInfo">
        <span>
            {% set logo = globalVars.simpleLogo.one() %}
            {% if logo and logo.extension == 'svg' %}     
                {# <p>{{ logo.url }}</p>  #}         
                <a href="{{ alias('@web') }}">{{ svg(logo) }}</a>
            {% endif %}
        </span>
        <span>
            {{ footer.copyright }}
        </span>
        <div class="footerLinks">
            {% for link in footer.links  %}
                <span class="footerLinks">
                    <a href="{{ alias('@web') }}/{{ link.uri }}">{{ link.label }}</a>
                </span>
            {% endfor %}
        </div>
            
